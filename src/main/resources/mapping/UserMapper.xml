<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.heitian.ssm.dao.UserDao">

    <resultMap id="UserBaseMap" type="com.heitian.ssm.model.response.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="user_phone" property="userPhone" jdbcType="VARCHAR"/>
        <result column="user_email" property="userEmail" jdbcType="VARCHAR"/>
        <result column="user_pwd" property="userPwd" jdbcType="VARCHAR"/>
        <result column="pwd_salt" property="pwdSalt" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
        <result column="modify_time" property="modifyTime" jdbcType="DATE"/>
        <result column="is_delete" property="isDelete" jdbcType="SMALLINT"></result>
        <result column="qq_id"     property="qqId"     jdbcType="VARCHAR"></result>
    </resultMap>

    <select id="selectUserById" parameterType="java.lang.Long" resultMap="UserBaseMap">
        SELECT * FROM t_user
        WHERE id = #{userId}
    </select>

    <select id="selectUserByPhoneOrEmail" resultMap="UserBaseMap">
        SELECT * FROM t_user
        WHERE user_email = #{emailOrPhone} OR user_phone = #{emailOrPhone}
    </select>

    <select id="selectAllUser" resultMap="UserBaseMap">
        SELECT * FROM t_user
    </select>

    <select id="selectByUserName" resultMap="UserBaseMap">
        SELECT * FROM t_user
        WHERE user_name = #{name}
    </select>

    <select id="login" resultMap="UserBaseMap">
        SELECT * FROM t_user WHERE user_phone = #{phone} AND user_pwd = #{password}
    </select>

    <insert id="regist" parameterType="com.heitian.ssm.model.response.User">
        INSERT INTO t_user(user_phone,user_pwd,create_time) VALUES (#{phone} , #{password}, #{createTime})
    </insert>

    <update id="update" parameterType="com.heitian.ssm.model.response.User">
        UPDATE t_user SET user_pwd = #{password} , modify_time = #{modifyTime}  WHERE user_phone = #{phone}
    </update>

    <insert id="insertByUserName" parameterType="com.heitian.ssm.model.response.User">
        INSERT INTO t_user(user_name,create_time) VALUES (#{name} , #{createTime})
    </insert>
</mapper>