<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" scanPeriod="30 seconds" debug="false">
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">  
			<level>DEBUG</level>
		</filter>  
		<encoder>
			<pattern>%d|%-5level|%thread|%caller{1}%msg%n</pattern>
		</encoder>
	</appender>
	<appender name="MYDEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">  
			<level>DEBUG</level>  
			<onMatch>ACCEPT</onMatch>  
			<onMismatch>DENY</onMismatch>  
		</filter>  
		<encoder>
			<pattern>%d|%-5level|%thread|%caller{1}%msg%n</pattern>
		</encoder>
		<File>/data/sdklog/logs/debug.log</File>
		<rollingPolicy class = "ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		 	<fileNamePattern>/data/sdklog/logs/debug-%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>>
	</appender>
	<appender name="MYINFO" class="ch.qos.logback.core.rolling.RollingFileAppender">		
		<filter class="ch.qos.logback.classic.filter.LevelFilter">  
			<level>INFO</level>  
			<onMatch>ACCEPT</onMatch>  
			<onMismatch>DENY</onMismatch>  
		</filter>  
		<encoder>
			<pattern>%d|%-5level|%thread|%caller{1}%msg%n</pattern>
		</encoder>
		<File>/data/sdklog/logs/info.log</File>
		<rollingPolicy class = "ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		 	<fileNamePattern>/data/sdklog/logs/info-%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>>
	</appender>
	<appender name="MYWARN" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">  
			<level>WARN</level>  
			<onMatch>ACCEPT</onMatch>  
			<onMismatch>DENY</onMismatch>  
		</filter>  
		<encoder>
			<pattern>%d|%-5level|%thread|%caller{1}%msg%n</pattern>
		</encoder>
		<File>/data/sdklog/logs/warn.log</File>
		<rollingPolicy class = "ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		 	<fileNamePattern>/data/sdklog/logs/warn-%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>>
	</appender>
	<appender name="MYERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">  
			<level>ERROR</level>  
			<onMatch>ACCEPT</onMatch>  
			<onMismatch>DENY</onMismatch>  
		</filter>  
		<encoder>
			<pattern>%d|%-5level|%thread|%caller{1}%msg%n</pattern>
		</encoder>
		<File>/data/sdklog/logs/error.log</File>
		<rollingPolicy class = "ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		 	<fileNamePattern>/data/sdklog/logs/error-%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>>
	</appender>
	<logger name="com.road.mobile.charge.cron.CronManager" level="DEBUG"/>
	<logger name="com.road.mobile.charge.channel.AbstractSdk" level="DEBUG"/>
	<root level="DEBUG">
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="MYDEBUG"/>
		<appender-ref ref="MYINFO"/>
		<appender-ref ref="MYWARN"/>
		<appender-ref ref="MYERROR"/>
	</root>
</configuration>